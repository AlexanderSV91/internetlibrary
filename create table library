USE library;

CREATE TABLE READER
(
    Id INT PRIMARY KEY AUTO_INCREMENT,
    FirstName VARCHAR(20) NOT NULL,
    LastName VARCHAR(20) NOT NULL,
    Age INT
);

CREATE TABLE STATUS
(
    Id INT PRIMARY KEY AUTO_INCREMENT,
    Name VARCHAR(20) NOT NULL
);

CREATE TABLE BOOK_CONDITION
(
    Id INT PRIMARY KEY AUTO_INCREMENT,
    Name VARCHAR(20) NOT NULL
);

CREATE TABLE BOOK
(
    Id INT PRIMARY KEY AUTO_INCREMENT,
    Name VARCHAR(20),
    Reader INT,
    Status INT,
    BookCondition INT,
    ValidityDate DATETIME DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (Reader) REFERENCES READER (Id) ON DELETE SET NULL,
    FOREIGN KEY (Status) REFERENCES STATUS (Id) ON DELETE SET NULL,
    FOREIGN KEY (BookCondition) REFERENCES BOOK_CONDITION (Id) ON DELETE SET NULL
);